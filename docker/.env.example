# mgit Docker Environment Configuration
# Copy this file to .env and fill in your values

# Build configuration
MGIT_VERSION=0.2.1
BUILD_DATE=
VCS_REF=

# mgit application settings
MGIT_LOG_LEVEL=INFO
MGIT_DEFAULT_CONCURRENCY=5

# Azure DevOps configuration
AZURE_DEVOPS_ORG_URL=https://dev.azure.com/your-organization
AZURE_DEVOPS_PAT=your-personal-access-token

# GitHub configuration
GITHUB_TOKEN=your-github-token
GITHUB_ORG=your-github-organization

# Bitbucket configuration
BITBUCKET_USERNAME=your-bitbucket-username
BITBUCKET_APP_PASSWORD=your-app-password
BITBUCKET_WORKSPACE=your-workspace

# Docker configuration
HOST_REPOS_DIR=./repos
TZ=UTC

# Security configuration
# Set to true to enable additional security features
ENABLE_SECURITY_SCANNING=false
ENABLE_ROOTLESS_MODE=false

# Development configuration (for dev profile)
MGIT_DEV_MODE=false
MGIT_DEBUG=false